@model List<AutomatApp.Entities.Models.CatUsersModel>
@{
    ViewBag.Title = "Usuarios";
}



@section Actions{

    @if (Session["UsuarioRegistra"].ToString() == "Registrar")
    {
        <button class="btn btn-sm pd-x-15 btn-primary btn-uppercase mg-l-5" id="btnNuevo">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-plus-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm7.5-3a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
            </svg> Nuevo Usuario
        </button>
    }

}

@if (ViewBag.PermisoConsulta == "Consultar")
{
    <br /><br />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Usuarios</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Paterno</th>
                            <th scope="col">Materno</th>
                            <th scope="col">Correo</th>
                            <th scope="col" width="50px">Activo</th>
                            <th scope="col">Perfil</th>
                            <th scope="col">Alta</th>
                            @if (Session["UsuarioActualiza"].ToString() == "Actualizar")
                            {
                                <td scope="col"></td>
                            }
                        </tr>
                    <tbody>

                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>@item.IdUsusario</td>*@
                                    <td>@item.Nombre</td>
                                    <td>@item.ApPaterno</td>
                                    <td>@item.ApMaterno</td>
                                    <td>@item.Correo</td>
                                    <td>@(item.Activo ? "Activo" : "Inactivo")</td>
                                    @*<td>@item.idPerfil</td>*@
                                    <td>@item.Perfil</td>
                                    <td>@item.FechaAlta.ToString("dd/MM/yyyy")</td>
                                    @if (Session["UsuarioActualiza"].ToString() == "Actualizar")
                                    {
                                        <td>
                                            <a class="editConfiguration" style="cursor:pointer" href="~/User/Crud?id=@item.IdUsusario">
                                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                                </svg>
                                            </a>
                                        </td>
                                    }
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <h3 class="text-xl-center text-danger">Sin permisos para consultar, consulte a su administrador</h3>
}
<script>

    $(function () {
        'use strict'

        $('#tableUsers').dataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json',
                searchPlaceholder: "Buscar",
                sSearch: '',
                lengthMenu: '_MENU_ filas / paginas'
            }
        });

    })
    $("#btnNuevo").click(function () {
        window.location.href = '/User/Crud';
    });
</script>
