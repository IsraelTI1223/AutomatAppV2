@model AutomatApp.Entities.Models.CatProducto.CargaPreciosViewModel
@{
    ViewBag.Title = "Carga de Precios";
}

<h2>Carga de Precios</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<div class="row">
    <div class="col-md-6">

        <h4>Carga Manual</h4>
        <hr />

        @using (Html.BeginForm("CargarManual", "Precios", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Producto")
                @Html.DropDownListFor(m => m.ProductoId,Model.ProductoId, "Seleccione...", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Precio")
                @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", type="number", step="0.01" })
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
        }
    </div>

    <div class="col-md-6">

        <h4>Carga por Excel</h4>
        <hr />

        @using (Html.BeginForm("CargarExcel", "Precios", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label>Archivo Excel</label>
                <input type="file" name="archivo" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Subir Excel</button>

            <div class="mt-3">
                <a href="/plantillas/CargaPrecios.xlsx" class="btn btn-link">Descargar plantilla</a>
            </div>
        }
    </div>
</div>